<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="16dp"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >
        <View
            android:layout_width="match_parent"
            android:layout_height="4dp"
            android:background="@color/teal_200"
            />
        <LinearLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="#eae7e7"
                >
                <TextView
                    android:id="@+id/textViewCauHoi"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Câu 1"
                    android:textColor="#ff0000"
                    android:textStyle="bold"
                    android:layout_marginTop="9dp"
                    android:layout_marginLeft="9dp"
                    android:textSize="20sp"
                    />
                <TextView
                    android:id="@+id/textViewLyThuyet"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Phần của đường bộ được sử dụng cho các phương tiện giao thông qua lại là gì ?"
                    android:textColor="#000"
                    android:textStyle="bold"
                    android:layout_marginTop="9dp"
                    android:layout_marginLeft="9dp"
                    android:layout_marginRight="9dp"
                    android:layout_marginBottom="9dp"
                    android:textSize="19sp"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Đáp án:"
                    android:textColor="#3498eb"
                    android:textStyle="bold"
                    android:layout_marginLeft="9dp"
                    android:layout_marginRight="9dp"
                    android:layout_marginBottom="9dp"
                    android:textSize="20sp"
                    />
                <RadioButton
                    android:id="@+id/textViewDapan"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Phần đường xe chạy."
                    android:textSize="18dp"
                    android:checked="true"
                    android:textColor="@color/black"
                    android:layout_marginLeft="9dp"
                    android:layout_marginRight="9dp"
                    android:layout_marginBottom="9dp"
                    android:background="@drawable/bg_maucam_corner_30"></RadioButton>
                <ImageView
                    android:id="@+id/anhCauHoi"
                    android:layout_width="250dp"
                    android:layout_height="125dp"
                    android:visibility="gone"
                    android:background="@android:color/transparent"
                    android:layout_marginLeft="13dp"
                    android:layout_marginRight="13dp"
                    android:scaleType="fitCenter"
                    android:layout_gravity="center"
                    android:layout_marginBottom="13dp"
                    />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>