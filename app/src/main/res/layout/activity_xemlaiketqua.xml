<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".xemlaiketqua">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbarXemKQ"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/teal_200"
            android:minHeight="?attr/actionBarSize"
            android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                >
                <TextView
                    android:id="@+id/textviewSatHach"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="5"
                    android:gravity="left"
                    android:text="Xem lại KQ"
                    android:textColor="#FFF"
                    android:textSize="30sp"
                    android:textStyle="bold"
                    />
                <TextView
                    android:id="@+id/textviewXemLaiTime"
                    android:layout_width="0dp"
                    android:layout_weight="3"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="00:00"
                    android:textColor="#FFF"
                    android:textSize="30sp"
                    android:textStyle="bold"
                    />
            </LinearLayout>

        </androidx.appcompat.widget.Toolbar>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="8"
            android:orientation="vertical"
            tools:context=".bienbao">

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:padding="10dp">
                    <TextView
                        android:id="@+id/questionXemLaiKq"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:textSize="25dp"
                        android:textStyle="bold"
                        android:text="Câu 1"
                        android:textColor="#ff0000"
                        ></TextView>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/black">

                    </TextView>
                    <TextView
                        android:id="@+id/content_questionXemLaiKq"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:textSize="22dp"
                        android:textStyle="bold"
                        android:text="Hành vi giao xe cơ giới, xe máy chuyên dùng cho người không đủ điều kiện để điều khiển xe tham gia giao thông có được phép hay không?"
                        android:textColor="#003300"
                        android:padding="5dp"
                        ></TextView>
                    <ImageView
                        android:id="@+id/image_thisathachXemLaiKq"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:scaleType="centerInside"
                        android:src="@drawable/img6"
                        android:paddingBottom="3dp">

                    </ImageView>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/black">
                    </TextView>
                    <RadioGroup
                        android:id="@+id/bt_groupXemLaiKq"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <RadioButton
                            android:id="@+id/checkboxAXemLaiKq"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginTop="10dp"
                            android:layout_marginBottom="5dp"
                            android:background="@color/white"
                            android:text="A. Chỉ được thực hiện nếu đã hướng dẫn đầy đủ"
                            android:textSize="18dp">

                        </RadioButton>
                        <RadioButton
                            android:id="@+id/checkboxBXemLaiKq"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginTop="5dp"
                            android:layout_marginBottom="5dp"
                            android:text="B. Không được phép"
                            android:background="@color/white"
                            android:textSize="18dp">

                        </RadioButton>
                        <RadioButton
                            android:id="@+id/checkboxCXemLaiKq"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginTop="5dp"
                            android:layout_marginBottom="5dp"
                            android:background="@color/white"
                            android:text="C. Được phép tùy từng trường hợp"
                            android:textSize="18dp">

                        </RadioButton>
                        <RadioButton
                            android:id="@+id/checkboxDXemLaiKq"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginTop="5dp"
                            android:layout_marginBottom="5dp"
                            android:background="@color/white"
                            android:text="D. Chỉ được phép thực hiện với thành viên trong gia đình"
                            android:textSize="18dp">

                        </RadioButton>
                    </RadioGroup>

                </LinearLayout>
            </ScrollView>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <Button
                android:id="@+id/bt_TruocXemLaiKq"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="&lt;&lt;"
                android:backgroundTint="#cc0000"
                android:textColor="@color/white"
                android:textSize="30sp" />
            <Button
                android:id="@+id/bt_viewXemLaiKQ"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:text="Đúng 20/20"
                android:backgroundTint="#ff9600"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:textSize="20sp" />
            <Button
                android:id="@+id/bt_SauXemLaiKq"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="&gt;&gt;"
                android:textSize="30sp"
                android:backgroundTint="#cc0000"
                android:textColor="@color/white"/>

        </LinearLayout>

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>